{
  "name": "11ty-uswds-template",
  "version": "0.0.2",
  "description": "A 11ty UWDS template.",
  "main": "index.js",
  "scripts": {
    "build": "npm run assets:refresh && npx @11ty/eleventy && npm run search:index",
    "assets:autoprefix": "postcss _site/assets/styles/*.css -r",
    "assets:build": "node ./config/buildAssets && npm run assets:autoprefix",
    "assets:clean": "rimraf _site/assets",
    "assets:refresh": "npm run assets:clean && npm run assets:build",
    "assets:watch": "chokidar 'js/**' 'styles/**' -c 'npm run assets:refresh' --polling",
    "clean": "rimraf _site",
    "dev": "npm run clean && npm run assets:build && npx @11ty/eleventy && npm run search:index && npm-run-all -p dev:assets dev:serve",
    "dev:clean": "npm run clean && npm run dev",
    "dev:assets": "npm run assets:refresh && npm run assets:watch",
    "dev:debug": "DEBUG=* npx @11ty/eleventy --serve --watch",
    "dev:serve": "npx @11ty/eleventy --serve --watch",
    "dev:cms": "npx decap-server",
    "pages": "ELEVENTY_ENV=production npm run build",
    "search:index": "npx pagefind --site _site --glob \"case/**/*.html\"",
    "serve": "npx @11ty/eleventy --serve",
    "start": "npx @11ty/eleventy --serve",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "CC0-1.0",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-navigation": "^1.0.5",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@shopify/prettier-plugin-liquid": "^1.10.0",
    "autoprefixer": "^10.4.24",
    "chokidar-cli": "^3.0.0",
    "eleventy-plugin-svg-sprite": "^2.4.6",
    "esbuild": "0.27.3",
    "esbuild-sass-plugin": "^3.6.0",
    "js-yaml": "^4.1.1",
    "luxon": "^3.7.2",
    "markdown-it": "^14.1.1",
    "markdown-it-named-headings": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "pagefind": "^1.4.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2"
  },
  "dependencies": {
    "@uswds/uswds": "^3.13.0",
    "decap-cms": "^3.10.0"
  }
}
